<!-- views/forgot-password.ejs -->
<div class="fp-form-container">
    <h2>Forgot Password</h2>
    <% if (errorMessage && errorMessage.length > 0) { %>
      <div class="fp-error-message">
        <%= errorMessage %>
      </div>
    <% } %>
    <% if (successMessage && successMessage.length > 0) { %>
      <div class="fp-success-message">
        <%= successMessage %>
      </div>
    <% } %>
    <form action="/forgot-password" method="POST">
      <input type="email" name="email" placeholder="Enter your email" class="fp-input" required>
      <button type="submit" class="fp-button">Send Reset Link</button>
    </form>
    <p><a href="/" class="fp-back-link">Back to Login</a></p>
  </div>