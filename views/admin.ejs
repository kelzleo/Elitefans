<!-- views/admin.ejs -->
<h1>Admin Dashboard</h1>

<h2>Pending Creator Requests</h2>
<% if (creatorRequests && creatorRequests.pending && creatorRequests.pending.length > 0) { %>
    <ul>
        <% creatorRequests.pending.forEach(request => { %>
            <li style="margin-bottom: 15px; border-bottom: 1px solid #ccc; padding-bottom: 10px;">
                <a href="/admin/creator-request/pending/<%= request._id %>">
                  <strong>User:</strong> <%= request.user.username %> (<%= request.firstName %> <%= request.lastName %>)
                </a> (<%= request.user.email %>) â€“ Requested on <%= new Date(request.requestedAt).toLocaleString() %>
            </li>
        <% }) %>
    </ul>
<% } else { %>
    <p>No pending creator requests at the moment.</p>
<% } %>

<h2>Approved Creators</h2>
<% if (creatorRequests && creatorRequests.approved && creatorRequests.approved.length > 0) { %>
    <ul>
        <% creatorRequests.approved.forEach(creator => { %>
            <li style="margin-bottom: 15px; border-bottom: 1px solid #ccc; padding-bottom: 10px;">
                <a href="/admin/creator-request/approved/<%= creator._id %>">
                  <strong>User:</strong> <%= creator.username %>
                </a> (<%= creator.email %>)
            </li>
        <% }) %>
    </ul>
<% } else { %>
    <p>No approved creators at the moment.</p>
<% } %>

<a href="/admin/delete-logs">View Post Deletion Logs</a>

