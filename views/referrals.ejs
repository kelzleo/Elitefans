<div class="referral-page">
  <h2>Referral Earnings</h2>
  <p>Your referral link: 
    <a href="<%= referralLink %>" class="referral-link">
      <%= referralLink %>
    </a>
  </p>
  <p class="referral-earnings-total">
    Total referral earnings: ₦<%= totalReferralEarnings.toFixed(2) %>
  </p>

  <h3>Referred Creators</h3>
  <% if (referredCreators.length > 0) { %>
    <ul class="referral-creator-list">
      <% referredCreators.forEach(creator => { %>
        <li>
          <div class="referral-details">
            <strong><%= creator.username %></strong>
            <span>Became creator on <%= creator.creatorSince.toLocaleDateString() %></span>
          </div>
          <div class="referral-creator-earnings">
            ₦<%= creator.totalReferralEarnings.toFixed(2) %>
          </div>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <div class="referral-no-creators">
      You haven’t referred any creators yet.
    </div>
  <% } %>

  <a href="/dashboard" class="referral-back-btn">← Back to Dashboard</a>
</div>
