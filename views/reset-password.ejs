<!-- views/reset-password.ejs -->
<div class="fp-form-container">
    <h2>Reset Password</h2>
    <% if (errorMessage && errorMessage.length > 0) { %>
      <div class="fp-error-message">
        <%= errorMessage %>
      </div>
    <% } %>
    <% if (successMessage && successMessage.length > 0) { %>
      <div class="fp-success-message">
        <%= successMessage %>
      </div>
    <% } %>
    <form action="/reset-password/<%= token %>" method="POST">
      <input type="password" name="newPassword" placeholder="New Password" class="fp-input" required>
      <input type="password" name="confirmPassword" placeholder="Confirm New Password" class="fp-input" required>
      <button type="submit" class="fp-button">Reset Password</button>
    </form>
    <p><a href="/" class="fp-back-link">Back to Login</a></p>
  </div>